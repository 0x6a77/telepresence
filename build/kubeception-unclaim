DIR=$( dirname "${BASH_SOURCE[0]}" )
source $DIR/helpers

set -o errexit
set -o nounset
set -o xtrace

PATH=~/bin:$PATH

if test -e ~/kubeception-claim.txt; then
    DEV_KUBECONFIG=~/.kube/kubeception.yaml
    del_cluster ${DEV_KUBECONFIG}
fi
rm -f ~/kubeception-claim.txt
