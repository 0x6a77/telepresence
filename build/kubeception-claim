#!/usr/bin/env bash

DIR=$( dirname "${BASH_SOURCE[0]}" )
# shellcheck source=helpers
source "$DIR"/helpers

set -o errexit
set -o nounset
set -o xtrace

# This block gets a kluster from kubeception.
# The KUBECEPTION_TOKEN env var is set in the circleci webui.
if [ -n "${KUBECEPTION_TOKEN}" ]; then
    # Use a CLAIM_NAME of kubeception.
    echo kubeception > ~/kubeception-claim.txt
    mkdir -p ~/.kube
    export DEV_KUBECONFIG=~/.kube/kubeception.yaml
    # get a kluster with a 1 timeout that is size "medium"
    get_cluster ${DEV_KUBECONFIG} 28800 medium
    kubectl --kubeconfig ${DEV_KUBECONFIG} -n default get service kubernetes
    exit 0
fi
exit 1
